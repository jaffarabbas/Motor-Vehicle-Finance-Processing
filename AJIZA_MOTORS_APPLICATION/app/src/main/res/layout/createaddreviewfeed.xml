<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    >

    <LinearLayout
        android:id="@+id/MainFeed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="horizontal">
         <ImageView
             android:id="@+id/FeedImage"
             android:layout_width="200dp"
             android:layout_height="193dp"
             android:layout_gravity="start"
             app:srcCompat="@drawable/ic_baseline_add_photo_alternate_24"
             tools:ignore="VectorDrawableCompat" />
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical">
             <TextView
                 android:id="@+id/FeedCarName"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:text="TextView"
                 android:textSize="20dp" />


             <TextView
                 android:id="@+id/FeedCarModel"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:text="TextView"
                 android:textSize="20dp" />

             <TextView
                 android:id="@+id/FeedCarAddress"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:text="TextView"
                 android:textSize="20dp" />
             <TextView
                 android:id="@+id/FeedCarPayment"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:text="TextView"
                 android:textSize="20dp" />
         </LinearLayout>
     </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="50dp"
            >
            <TextView
                android:id="@+id/Texthead1"
                android:layout_width="44dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text="Price : "
                android:textSize="30sp" />
            <TextView
                android:id="@+id/FeedCarPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text="TextView"
                android:textSize="30sp"
                android:layout_marginRight="40dp"/>

        </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical">
          <TextView
              android:id="@+id/FeedCarSellerName"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="10dp"
              android:layout_weight="1"
              android:layout_marginLeft="20dp"
              android:text="TextView"
              android:textSize="20sp" />
          <TextView
              android:id="@+id/FeedCarSellerContact"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="7dp"
              android:layout_marginLeft="20dp"
              android:layout_weight="1"
              android:text="TextView"
              android:textSize="20sp" />

          <Button
              android:id="@+id/ApproveFromAdmin"
              android:layout_width="278dp"
              android:layout_height="38dp"
              android:layout_gravity="center"
              android:layout_marginTop="20dp"
              android:layout_weight="1"
              android:background="@color/yellow"
              android:text="Approve" />
      </LinearLayout>
    </LinearLayout>
</LinearLayout>