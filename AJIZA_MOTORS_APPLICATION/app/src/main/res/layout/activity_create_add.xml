<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateAdd">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="199dp"
        tools:layout_editor_absoluteY="496dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/UplaodAddImage"
                android:layout_width="406dp"
                android:layout_height="185dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_baseline_add_photo_alternate_24"
                tools:ignore="VectorDrawableCompat" />

            <ProgressBar
                android:id="@+id/WaitToUpload"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:layout_constraintVertical_bias="0.118" />

            <EditText
                android:id="@+id/UploadName"
                android:layout_width="403dp"
                android:layout_height="42dp"
                android:layout_marginTop="24dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Car Name " />

            <EditText
                android:id="@+id/UploadCarModel"
                android:layout_width="409dp"
                android:layout_height="52dp"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Car Model" />

            <EditText
                android:id="@+id/UploadAddress"
                android:layout_width="409dp"
                android:layout_height="52dp"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Address" />

            <TextView
                android:id="@+id/UploadTextview1"
                android:layout_width="match_parent"
                android:textSize="20dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="6dp"
                android:text="Payment Type " />


            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:id="@+id/UploadPaymentGroup"
                >
                <RadioButton
                    android:id="@+id/UploadPayment"
                    android:layout_width="97dp"
                    android:layout_height="wrap_content"
                    android:text="Cash"
                    android:onClick="checked"/>
                <RadioButton
                    android:id="@+id/UploadPayment2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Check"
                    android:onClick="checked"/>

            </RadioGroup>

            <EditText
                android:id="@+id/UploadPrice"
                android:layout_width="409dp"
                android:layout_height="52dp"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:inputType="number"
                android:hint="Price" />
            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="20dp"
                android:background="?android:attr/listDivider" />
            <TextView
                android:id="@+id/UploadTextview2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="40dp"
                android:text="Seller Information" />

            <EditText
                android:id="@+id/UploadSellerName"
                android:layout_width="409dp"
                android:layout_height="52dp"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Seller Name" />
            <EditText
                android:id="@+id/UploadSellerContact"
                android:layout_width="409dp"
                android:layout_height="52dp"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:inputType="number"
                android:hint="Seller Contact" />
            <Button
                android:id="@+id/UploadAdd"
                android:layout_width="158dp"
                android:layout_height="61dp"
                android:background="@drawable/buttonbackground1"
                android:text="@string/createAdd"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                app:layout_constraintVertical_bias="0.874" />


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>