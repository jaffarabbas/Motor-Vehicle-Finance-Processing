<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/Theme.AJIZAMOTORS.PopupOverlay"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="Update Add From Admin" />

            <EditText
                android:id="@+id/UpdateAdminCarImage"
                android:layout_width="403dp"
                android:layout_height="42dp"
                android:layout_marginTop="24dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Car Image Url " />

            <EditText
                android:id="@+id/UpdateAdminCarName"
                android:layout_width="403dp"
                android:layout_height="42dp"
                android:layout_marginTop="24dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Car Name " />
            <EditText
                android:id="@+id/UpdateAdminCarModel"
                android:layout_width="409dp"
                android:layout_height="52dp"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Car Model" />

            <EditText
                android:id="@+id/UpdateUploadCarAddress"
                android:layout_width="409dp"
                android:layout_height="52dp"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Address" />

            <EditText
                android:id="@+id/UpdateUploadCarPayment"
                android:layout_width="409dp"
                android:layout_height="52dp"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:inputType="number"
                android:hint="Price" />

            <EditText
                android:id="@+id/UpdateUploadCarPrice"
                android:layout_width="409dp"
                android:layout_height="52dp"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:inputType="number"
                android:hint="Price" />
            <EditText
                android:id="@+id/UpdateUploadCarSellerName"
                android:layout_width="409dp"
                android:layout_height="52dp"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Seller Name" />
            <EditText
                android:id="@+id/UpdateUploadCarSellerContact"
                android:layout_width="409dp"
                android:layout_height="52dp"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:inputType="number"
                android:hint="Seller Contact" />
            <Button
                android:id="@+id/UpdateFromAdmin"
                android:layout_width="158dp"
                android:layout_height="61dp"
                android:background="@drawable/buttonbackground1"
                android:text="Update"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>